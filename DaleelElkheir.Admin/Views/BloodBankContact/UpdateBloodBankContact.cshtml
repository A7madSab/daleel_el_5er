@model DaleelElkheir.Admin.Models.BloodBanks.BloodBankContactModel

@{
    ViewBag.Title = "UpdateBloodBankContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("UpdateBloodBankContact", "BloodBankContact", FormMethod.Post))
{

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h5>Update Blood Bank Contact</h5>
        </div>
        <div class="panel-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   
  
                <div class="row form-group  ">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.ContactName, "Name", htmlAttributes: new { @class = "control-label col-md-4", @Style = "text-align: left !important;" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.ContactNumber, "Contact Number", htmlAttributes: new { @class = "control-label col-md-4", @Style = "text-align: left !important;" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                   
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.BloodBankID, "Blood Bank", htmlAttributes: new { @class = "control-label col-md-4", @Style = "text-align: left !important;" })
                        <div class="col-md-8">
                            @Html.DropDownList("BloodBankID", new SelectList(ViewBag.BloodBanks, "Value", "Text"), null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BloodBankID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
               </div>
                </div>
            </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" name="save" value="Save" class="btn btn-primary btn-group-lg" style="min-width:100px;" />
                @Html.ActionLink("Cancel", "BloodBankContactList", null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    @Html.HiddenFor(m=>m.ID)
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
